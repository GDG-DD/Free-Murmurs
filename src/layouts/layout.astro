---
import { count } from '@/lib/sounds';

import '@/styles/global.css';

interface Props {
  description?: string;
  title?: string;
}

const title = Astro.props.title || 'Murmurs: Ambient Sounds for Focus and Calm';
const description =
  Astro.props.description ||
  `Murmurs is a premium ambient sound generator featuring ${count()} carefully curated sounds. Create your ideal atmosphere for relaxation, focus, or creativity with this versatile tool.`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width" name="viewport" />
    <meta content={Astro.generator} name="generator" />
    <meta content="#18181b" name="theme-color" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />

    <title>{title}</title>
    <meta content={title} name="title" />
    <meta content={description} name="description" />

    <meta content={title} property="og:title" />
    <meta content={description} property="og:description" />
    <meta content="Murmurs" property="og:site_name" />
    <meta content="https://murmurs.stream" property="og:url" />
    <meta content="website" property="og:type" />
    <meta content="https://murmurs.stream/og.png" property="og:image" />

    <meta content="summary_large_image" name="twitter:card" />

    <!-- Add your tracking code here -->
    <script
      async
      defer
      src="https://app.visitortracking.com/assets/js/tracer.js"></script>
    <script>
      // Initialize the tracer for tracking viewers
      function init_tracer() {
        var tracer = new Tracer({
          async: true,
          debug: false,
          websiteId: '162f5cfc-31fd-4004-a9bb-8976c7ad7821',
        });

        // Example of tracking a page view
        tracer.trackPageView(); // Call this method to track the page view
      }

      // Call the function immediately to ensure tracking is set up
      init_tracer();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
